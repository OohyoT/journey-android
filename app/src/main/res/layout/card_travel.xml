<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:background="@color/black_alpha54"
            app:layout_aspectRatio="178%"
            app:layout_widthPercent="100%"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_100"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="回眸寻光影，转身等风来"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/location_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="游记・"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/location_start"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/location_start"
            android:text="台湾"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/image"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_favorite_white_24dp"/>

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/like_icon"
            android:text="66"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/image"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/like_count"
            android:src="@drawable/ic_mode_comment_white_24dp"/>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/comment_icon"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>
