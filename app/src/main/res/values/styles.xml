<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorAccent">@color/orange_a400</item>
    </style>

    <style name="EntryTheme" parent="AppTheme">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_100</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="EntryButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange_300</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryTextAppearance" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black_alpha87</item>
    </style>

    <style name="SecondaryTextAppearance" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="HintTextAppearance" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
